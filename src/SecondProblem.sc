@annotation.tailrec
def binSum(number: List[Int], carry: Int, sum: Int): Int =
  number match {
    case Nil => sum + carry
    case head :: tail =>
      binSum(tail, (head + carry) / 2, sum + (head + carry) % 2 * 2 - 1)
  }

binSum(
  top.reverse.zipAll(bottom.reverse, '0', '0')
    .map(x => x._1.toInt + x._2.toInt - 2 * '0'.toInt)
    .toList,
  0,
  0
)
